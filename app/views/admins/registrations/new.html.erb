<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0"><strong>会員登録</strong></h5>
        <div class="form-body p-4">
            <div class="mx-auto text-center">
              <p>ニックネームとメールアドレス<br>パスワードを入力してください</p>
            </div>
        
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user"></i></span>
                    </div>
                      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ニックネーム" %>
                  </div>
                        
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
                    </div>
                      <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
                  </div>
                  
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></i></span>
                    </div>
                      <% if @minimum_password_length %>
                      <em></em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
                  </div>
                        
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
                    </div>
                      <%=f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認用)" %>
                  </div>      
                        
                  
                  
                
                
                    <%= f.submit "会員登録", class:"btn btn-lg btn-block btn-info mt-5" %>
                
            <% end %>

              
        </div>
    </div>
  </div>
</div>






<%= render "devise/shared/links" %>