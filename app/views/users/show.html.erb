<div>
  <% if @user.get_profile_image(250, 250) %>
    <%= link_to image_tag(@user.get_profile_image(250, 250)), edit_user_path(@user) %>
    <h10><%= link_to @user.name, edit_user_path(@user) %></h10>
  <% end %>
 
    <h8>投稿一覧</h8>
        <table>
          <% @posts.each do |post| %>
            <tr>
              <%= link_to image_tag(post.get_image(100, 100)), post_path(post.user_id) %>
              <%= link_to post.stone_name, post_path(post.user_id) %>
              <%= post.caption %>
            </tr>
          <% end %>
        </table>
    <%= link_to "投稿する", new_post_path %>
    
