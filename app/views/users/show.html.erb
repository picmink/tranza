<div>

    <%= link_to image_tag(@user.get_profile_image(200, 200)), edit_user_path(@user) %>
    <h10><%= link_to @user.name, edit_user_path(@user) %></h10>
    
      
    <br>

 
    <h8>投稿一覧</h8>
        <table>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to image_tag(post.get_image(150, 150)), post_path(post.id) %></td>
              <td><%= link_to post.stone_name, post_path(post.id) %></td>
              <td><%= post.caption %></td>
            </tr>
          <% end %>
        </table>


    <%= link_to "投稿する", new_post_path %><br>
    
    <h8>コメント一覧</h8>
        <table>
          <% @posts.each do |comment| %>
            <tr>
              <td><%= link_to image_tag(comment.get_image(150, 150)), post_path(comment.id) %></td>
              <td><%= link_to comment.stone_name, post_path(comment.id) %></td>
              <td><%= comment.comments.comment %></td>
            </tr>
          <% end %>
        </table>
    
</div>
    