<div class="container">
  <div class="row d-flex">
    <div class="col-lg">
      
      
      <div class="pt-3 pb-5">
        <%= search_form_for @search do |f| %>
          <%= f.search_field :name_cont, placeholder: '検索ワード' %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
      
      <div>
        <table>
          <th class="px-5"></th>
          <th class="px-5">ユーザーネーム</th>
        <% @users.each do |user| %>
          <tr>
            <td class="p-3 pr-5"><%= link_to image_tag(user.get_profile_image(100, 100)), user_path(user) %></td>
            <td class="px-5"><%= link_to user.name, user_path(user) %></td>
          </tr>
        <% end %>
        </table>
      </div>
      
      
    </div>
    <%= paginate @users %>
  </div>
</div>



