<div class="container">
    <div class="row">
        <div class="col-lg">
            <h3 class="text-center m-2 p-4">検索結果</h3>
            <table class="col-12 text-center">
              <thead>
                <tr>
                  <th>タグ</th>
                  <th></th>
                  <th>投稿</th>
                  <th>説明文</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @tag_results.each do |post| %>
                  <tr>
                    <td><%= post.tags.map(&:tag_name).join('、') %></td>
                    <td><%= image_tag(post.get_image(100,100)) %></td>
                    <td><%= post.stone_name %></td>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>