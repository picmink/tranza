<%= search_form_for @search do |f| %>
  <%= f.search_field :stone_name_cont, placeholder: '検索ワード' %>
  <%= f.collection_select(:tag_id, Tag.all, :id, :tag_name, include_blank: "タグ") %>
  <%= f.submit '検索' %>
<% end %>


<% @tags.each do |list| %>
  <%= list.tag_name %>
  <%= "(#{list.posts.count})" %>
<% end %>
<br>
<% @posts.each do |post| %>
  <table>
    <tr>
      <%= link_to image_tag(post.get_image(200, 200)), post_path(post) %>
      <%= link_to post.stone_name, post_path(post) %>
      <%= post.tags.map(&:tag_name).join('　') %>
    </tr><br>
  </table>
<% end %>
<%= paginate @posts %>