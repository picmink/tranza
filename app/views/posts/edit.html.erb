    <div class="row flex ">
        <div class="col-lg">
            <h3><strong>編集画面</strong></h3>
        </div>
        
        
        
        <div class="col-lg text-center">
            <%= form_with model: @posts do |post| %>
        
                <div class="col-lg p-4">
                    <p class="text-primary">天然石・宝石の名前</p></br>
                    <%= post.text_field :stone_name %>
                </div>
                <div class="col-lg pb-4 text-warning">
                    <p>説明文</p></br>
                    <%= post.text_area :caption %>
                </div>
                <div class="col-lgpb-4">
                    <p></p>
                    <%= post.text_field :tag_ids, value: @tags, placeholder: "複数つけるには','(半角)で区切ってください。" %>
                </div>
                <div class="col-lg p-5">
                    <div><%= post.submit '編集完了', class: "btn btn-outline-success" %></div>
                </div>
            <% end %>
        </div>
        
        
        
        
    </div>
</div>